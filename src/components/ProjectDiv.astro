---
// Usage: <GreetingHeadline greeting="Howdy" name="Partner" />
const { title, stack, description, url } = Astro.props;
---

<div>
    <h3><a href={url}>{title}</a></h3>
    <h4>{stack}</h4>
    <p>{description}</p>
</div>
<style>
    div {
        border: var(--text-color) 1px solid;
        border-radius: 4px;
        padding: 10px 20px;
        flex: 1 1 40%;
        color: var(--accent);
    }

    a {
        text-decoration: underline;
    }
</style>
