---
import ContactDetails from "./ContactDetails.astro";
import ContactForm from "./ContactForm.astro";
---

<main>
    <h1>Contact</h1>
    <div class="flex">
        <ContactDetails />
        <ContactForm />
    </div>
</main>
<style>
    main {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    h1 {
        font-size: 42px;
    }
    p {
        margin: 0;
        max-width: 10px;
    }
    div.flex {
        width: 100%;
        display: flex;
        justify-content: space-evenly;
    }
    @media (max-width: 640px) {
        div.flex {
            flex-direction: column;
            gap: 36px;
        }
    }
</style>
